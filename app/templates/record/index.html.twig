{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_record_list'|trans }}
{% endblock %}

{% block body %}
    {% block header %}
        <h1>{{ 'virtual_note'|trans }}</h1>
    {% endblock %}
    <div id="menu">
        <nav>
            <ul>
                <li id="todo">{{ 'title_notes_list'|trans }}
                    <ul id="pod">
                        <li><a href="{{ url('record_index') }}" title="record list">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li id="task">{{ 'title_task_list'|trans }}
                    <ul id="pod">
                        <li><a href="{{ url('task_index') }}" title="tasks list">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li id="categories">{{ 'title_categories_list'|trans }}
                    <ul id="pod">
                        <li><a href="">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li id="tags">{{ 'title_tags_list'|trans }}
                    <ul id="pod">
                        <li><a href="">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li><a href="">{{ 'sign_up'|trans }}</a></li>
            </ul>
        </nav>
    </div>
    <h2>{{ 'title_todo_list'|trans }}</h2>
    {% if data is defined and data|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label_id'|trans }}</th>
                <th>{{ 'label_title'|trans }}</th>
                <th>{{ 'label_tags'|trans }}</th>
                <th scope="col">
                    {{ 'label_actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for item in data %}
                <tr>
                    <td>{{ item.id }}</td>
                    <td>{{ item.title }}</td>
                    <td>{{ item.tags|join(', ') }}</td>
                    <td>
                        <a href="{{ url('record_show', {id: item.id}) }}" title="view">
                            {{ 'button_view'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>
            {{ 'message_empty_list'|trans }}
        </p>
    {% endif %}
{% endblock  %}