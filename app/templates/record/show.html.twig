{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_record_details'|trans({'%id%': item.id|default('')}) }}
{% endblock %}

{% block body %}
    {% block header %}
        <h1>{{ 'virtual_note'|trans }}</h1>
    {% endblock %}
    <div id="menu">
        <nav>
            <ul>
                <li id="todo">{{ 'title_notes_list'|trans }}
                    <ul id="pod">
                        <li><a href="{{ url('record_index') }}" title="record list">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li id="task">{{ 'title_task_list'|trans }}
                    <ul id="pod">
                        <li><a href="{{ url('task_index') }}" title="tasks list">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li id="categories">{{ 'title_categories_list'|trans }}
                    <ul id="pod">
                        <li><a href="">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li id="tags">{{ 'title_tags_list'|trans }}
                    <ul id="pod">
                        <li><a href="">{{ 'button_view'|trans }}</a></li>
                        <li><a href="">{{ 'add'|trans }}</a></li>
                        <li><a href="">{{ 'delete'|trans }}</a></li>
                    </ul>
                </li>
                <li><a href="">{{ 'sign_up'|trans }}</a></li>
            </ul>
        </nav>
    </div>
    <h2>{{ 'title_view_record'|trans({'%id%': item.id|default('')}) }}</h2>
    {% if item is defined and item|length %}
        <dl>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ item.title }}</dd>
            <dt>{{ 'label_content'|trans }}</dt>
            <dd>{{ item.content }}</dd>
            <dt>{{ 'label_tags'|trans }}</dt>
            <dd>{{ item.tags|join(', ') }}</dd>
        </dl>
        <p>
            <a href="{{ url('record_index') }}" title="back to the list">
                {{ 'button_back'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}